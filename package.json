{
  "name": "shellff-platform",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "build": "turbo run build",
    "dev:web": "pnpm --filter @shellff/web dev",
